int linearsearch(int a[],int n, int val)
{
    int flag=0,i;
    for(i=0;i<n;i++)
    {
        if(a[i]==val)
        flag=1;
        return i;
    }
    if(flag==0)
    {
        return -1;
    }
}

int main()
{
    int n,c,i,val;
    int a[20];
    printf("enter the number of elements of an array");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    printf("enter key");
    scanf("%d",&val);
    
     c=linearsearch(a,n,val);
     return c;
    ;
}
